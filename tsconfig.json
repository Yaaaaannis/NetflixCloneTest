{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/*": [
        "./*"
      ]
      // Vous pouvez ajouter d'autres alias ici
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "hooks/useauth.tsx"
    // Vous aviez répété "hooks/authcontext.tsx", je l'ai donc inclus une seule fois
  ],
  "exclude": [
    "node_modules"
  ]
}